<?xml version="1.0" encoding="utf-8"?>
<per.goweii.wanandroid.widget.draglayout.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foreground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <per.goweii.actionbarex.ActionBarEx
            android:id="@+id/ab"
            style="@style/ActionBar"
            app:ab_titleBarLayout="@layout/action_bar_article" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/bottom_bar_height"
            android:layout_weight="1"
            app:srlEnablePureScrollMode="true">

            <per.goweii.wanandroid.widget.WebContainer
                android:id="@+id/wc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_solid_round_color_surface_radius_top_def"
        android:elevation="5dp"
        android:orientation="vertical"
        tools:translationY="-670dp">

        <RelativeLayout
            android:id="@+id/rl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_user_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_def"
                app:riv_corner_radius="@dimen/bottom_bar_height"
                android:background="@color/surface_top"
                app:riv_mutate_background="true" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_def"
                android:layout_toEndOf="@+id/riv_user_icon"
                android:gravity="center"
                android:text="匿名用户"
                android:textColor="@color/text_third"
                android:textSize="@dimen/text_content" />

            <FrameLayout
                android:id="@+id/fl_top_bar_handle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="24dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_solid_round_color_surface_top_radius_max"
                    android:padding="15dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_def"
                android:gravity="center"
                android:text="查看评论(0)"
                android:textColor="@color/text_third"
                android:textSize="@dimen/text_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_below="@+id/rl_top_bar"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_empty"
            android:tint="@color/text_third" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_empty"
            android:layout_centerHorizontal="true"
            android:text="暂无评论"
            android:textColor="@color/text_third"
            android:textSize="@dimen/text_notes" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_above="@+id/rl_bottom_bar"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_def"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_def"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_toStartOf="@+id/tv_pinglun"
                android:background="@drawable/action_search_bg"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="留一个精彩的评论吧"
                android:lines="1"
                android:paddingStart="@dimen/margin_def"
                android:paddingEnd="@dimen/margin_def"
                android:singleLine="true"
                android:textColor="@color/text_second"
                android:textColorHint="@color/text_third"
                android:textSize="@dimen/text_content" />

            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_def"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_content" />

        </RelativeLayout>

    </RelativeLayout>

</per.goweii.wanandroid.widget.draglayout.DragLayout>
