<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_web_guide_iv_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:src="@drawable/bg_solid_round_color_main_radius_max" />

    <ImageView
        android:id="@+id/dialog_web_guide_iv_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:alpha="0.7"
        android:layout_alignTop="@+id/dialog_web_guide_iv_1"
        android:layout_alignLeft="@+id/dialog_web_guide_iv_1"
        android:src="@drawable/bg_solid_round_color_main_radius_max" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双击网页任意位置收藏文章"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/dialog_web_guide_iv_2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/dialog_web_guide_tv_know"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_solid_round_color_main_radius_max"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="知道了"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_content" />

</RelativeLayout>