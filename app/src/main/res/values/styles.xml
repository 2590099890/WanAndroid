<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:configChanges">
            keyboard|keyboardHidden|screenSize|fontScale|density|orientation
        </item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppTheme.Normal">
        <item name="android:windowAnimationStyle">@style/SwipeBackActivityAnimRightInParallaxOut</item>
    </style>

    <style name="AppTheme.Login">
        <item name="android:windowAnimationStyle">@style/SwipeBackActivityAnimBottomInParallaxOut</item>
    </style>

    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main</item>
        <item name="ab_autoImmersion">true</item>
        <item name="ab_bottomLineHeight">0dp</item>
        <item name="ab_foregroundLayerLayout">@layout/basic_ui_loading_bar</item>
        <item name="ab_statusBarColor">@color/transparent</item>
        <item name="ab_titleBarHeight">@dimen/action_bar_height</item>
    </style>

    <style name="StateView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="msv_animateViewChanges">false</item>
        <item name="msv_emptyView">@layout/layout_state_empty</item>
        <item name="msv_errorView">@layout/layout_state_error</item>
        <item name="msv_loadingView">@layout/layout_state_loading</item>
        <item name="msv_viewState">loading</item>
    </style>

    <style name="ActionBar.Common">
        <item name="abc_titleTextColor">@color/text_white</item>
        <item name="abc_leftIconColor">@color/white</item>
        <item name="abc_leftIconPadding">13dp</item>
        <item name="abc_leftTextColor">@color/white</item>
        <item name="abc_rightIconColor">@color/white</item>
        <item name="abc_rightIconPadding">13dp</item>
        <item name="abc_rightTextColor">@color/white</item>
    </style>

    <style name="ActionBar.Common.Back">
        <item name="abc_leftIconRes">@drawable/ic_back</item>
        <item name="abc_leftIconClickToFinish">true</item>
    </style>

</resources>
